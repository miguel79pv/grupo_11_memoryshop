<%- include('partials/head.ejs') %>
    <%- include('partials/header.ejs') %>
    <main>
        <div class="promo">
            <img src="/images/promo1.png" class="img-promo">
        </div>
        <div class="producto-detalle">
            <div class="titulo-detalle">Detalle de Producto | <%= producto.titulo %> </div>
            <div class="contenedor-carrito">
                <div class="img-detalle">
                    <img src="/images/<%= producto.foto %>" class="imagen-detalle">
                </div>
                <div class="informacion-detalle">
                    <div class="nombre-detalle"><%= producto.titulo %></div>
                    <div class="SKU-detalle">SKU: <%= producto.sku %></div>            
                    <div class="descripcion-detalle"> <%= producto.descripcion %> </div>
                    <div class="precio-detalle">Precio: <%= producto.precio %></div>
                    <div class="costo-envio-detalle">Costo de envío: 99.90</div>
                    <button type="submit" class="button-agregar">Agregar al Carrito</button>
                    <div class="caracteristicas-detalle">
                        <div class="caracteristicas-detalle-titulo">Características</div>
                        <div class="caracteristicas-detalle-característica"><strong>Color:</strong>	<%= producto.caracteristicas.color %></div>                
                        <div class="caracteristicas-detalle-característica"><strong>Capacidad de almacenamiento:</strong> <%= producto.caracteristicas.capacidad %></div>
                        <div class="caracteristicas-detalle-característica"><strong>Marca:</strong> <%= producto.caracteristicas.marca %></div>
                        <div class="caracteristicas-detalle-característica"><strong>Velocidad de lectura:</strong> <%= producto.caracteristicas.color %></div>
                        <div class="caracteristicas-detalle-característica"><strong>Tipo de memoria:</strong> <%= producto.caracteristicas.tipo_memoria %></div>
                    </div>
                </div>
            </div>
        </div>

    </main>
<%- include('partials/footer.ejs') %>
