<%- include('partials/head.ejs') %>
    <%- include('partials/header.ejs') %>
    <main>
        <div class="promo">
            <img src="/images/promo1.png" class="img-promo">
        </div>
        <div class="login">
            <div class="titulo-login">Login</div>
        </div>
        <div class="login-container">
            <form method="POST" action="/users/login" class="login">
                <label class="label-form" for="email">Correo</label>
                <br>
                <input class="input-form email" type="email" name="email">
                <% if (locals.errors && errors.email) {%>
                    <div class="errores"><p><%= errors.email.msg %></p></div>
                <% } %>
                <br>
                <label class="label-form" for="password">Contraseña:</label>
                <br>
                <input class="input-form password" type="password" name="password">
                <br>
                <label>
                    <input type="checkbox" name="remember_user">Recordar mi usuario
                </label>
                <button type="submit" class="button-form">Iniciar Sesión</button>
            </form>       
        </div>
        <div class="errores">
            <ul></ul>
        </div> 
    </main>
    <script src="/javascripts/frontLogin.js"></script>
<%- include('partials/footer.ejs') %>